{
  "name": "crosscut.js",
  "version": "0.9.0",
  "description": "Library for aspect-oriented programming with TypeScript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc --project src/tsconfig.json",
    "build:publish": "rm -rf dist && tsc && npm run package",
    "package": "cp ./package.json README.md dist/",
    "test": "mocha",
    "coverage": "nyc mocha",
    "format": "npm run format:src && npm run format:test",
    "format:src": "prettier --single-quote --trailing-comma es5 --print-width 120 --write src/**/*.ts",
    "format:test": "prettier --single-quote --trailing-comma es5 --print-width 120 --write test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/lizardruss/crosscut.js.git"
  },
  "keywords": [
    "aop",
    "aspects",
    "aspect-oriented",
    "programming",
    "javascript",
    "decorators",
    "pointcut",
    "join point"
  ],
  "author": "Minko Gechev <mgechev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mgechev/aspect.js/issues"
  },
  "homepage": "https://github.com/mgechev/aspect.js",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.48",
    "@types/sinon": "^4.3.0",
    "chai": "^3.3.0",
    "mocha": "^3.4.2",
    "nyc": "^12.0.2",
    "prettier": "^1.7.4",
    "reflect-metadata": "^0.1.12",
    "sinon": "^4.4.2",
    "source-map-support": "^0.5.5",
    "ts-node": "^6.0.3",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.12"
  }
}
